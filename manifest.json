{
  "manifest_version": 2,

  "name": "EasyScotia",
  "description": "Scotiabank interactive tutorials extension",
  "version": "1.0.0",
  "icons": { "128": "images/icon_128.png" },
  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "start.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "/scripts/content.js"
      ]
    }
  ]

}
